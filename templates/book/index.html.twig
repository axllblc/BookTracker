{% extends 'base.html.twig' %}

{% block title %}{{ book.Title }}{% endblock %}

{% block body %}


<div class="container mt-5">

    <div class="row">

        <div class="col-md-6">
            <img src="{{ asset( 'images/profiles/' ~ book.coverPicture ) }}"
                 alt="{{ book.title }}"
                 class="img-fluid rounded shadow-sm"
                 style="max-width: 100%; max-height: 500px;">
        </div>

        <div class="col-md-6">
            <h1 class="shadow-sm rounded p-3 mb-2 bg-light text-center">{{ book.title }}</h1>
            <h2 class="shadow-sm rounded p-2 mb-2 bg-primary-subtle text-center">{{ averageScore }}</h2>
            <p class="shadow-sm rounded p-3 mb-2 bg-light">{{ book.description }}</p>
            <p class="shadow-sm rounded p-3 mb-2 bg-light"><strong>ISBN:</strong> {{ book.isbn }}</p>
            <div class="shadow-sm card" style="width: 18rem;">
                <div class="card-header">
                    Authors
                </div>
                <ul class="list-group list-group-flush">
                    {% for author in book.authors %}
                        <li class="px-4 list-group-item"> {{ author.name }} </li>
                    {% endfor %}
                </ul>
            <div>
        </div>

    </div>

</div>

{% endblock %}
