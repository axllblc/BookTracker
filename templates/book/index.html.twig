{% extends 'base.html.twig' %}

{% block title %}{{ book.Title }}{% endblock %}

{% block body %}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 justify-content-md-center">
            <img src="{{ asset( 'images/profiles/' ~ book.coverPicture ) }}"
                 alt="{{ book.title }}"
                 class="img-fluid img-thumbnail mx-auto d-block rounded shadow-sm"
                 style="max-width: 100%; max-height: 500px;">
            <div class="shadow-sm rounded p-3 mb-2 bg-light text-center">
                <div class="row">

                </div>
                <div class="dropdown row border-top border-3">

                    <div class="dropdown">

                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {% if read is null %}
                                Add to My list
                            {% else %}
                                {{ read.status.status.value }}
                            {% endif %}
                        </button>

                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('app_book_reading', {'id':book.id} ) }}">Reading</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_book_completed', {'id':book.id} ) }}">Completed</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_book_drop', {'id':book.id} ) }}">Drop</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_book_plan_to_read', {'id':book.id} ) }}">Plan to Read</a></li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <h1 class="shadow-sm rounded p-3 mb-2 bg-light text-center">{{ book.title }}</h1>
            <h2 class="shadow-sm rounded p-2 mb-2 bg-primary-subtle text-center">{{ averageScore }}</h2>
            <div class="shadow-sm rounded p-3 mb-2 bg-light">
                {{ book.description | raw }}
            </div>
            <p class="shadow-sm rounded p-3 mb-2 bg-light">
                <strong>ISBN:</strong> {{ book.isbn is null ? 'Unknown' : book.isbn }}
            </p>
            <p class="shadow-sm rounded p-3 mb-2 bg-light">
                <strong>Editor:</strong> {{ book.editor is null ? 'Unknown' : book.editor }}
            </p>
            <div class="shadow-sm card">
                <div class="card-header">
                    Authors
                </div>
                <ul class="list-group list-group-flush">
                    {% for author in book.authors %}
                        <li class="px-4 list-group-item"> {{ author.name }} </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

    </div>

    <div class="pt-5 container">
        {% for review in reviews %}
            <div class="row shadow-sm rounded p-3 mb-2 bg-light">
                <div class="row">
                    <div class="col-md-6">
                        <p>{{ review.emotion.emoji }}
                            Publish By
                            <a href="" class="link-info link-underline-opacity-0">
                                {{ review.user.username }}
                            </a>
                            <span>On {{ review.date | date("m/d/Y") }}</span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="text-end">Score {{ review.score }} / 5</p>
                    </div>
                </div>
                <div class="row">
                    <div class="p-3 mb-2 border-top">{{ review.review | raw }}</div>
                </div>
            </div>
        {% endfor %}
    </div>

</div>

{% endblock %}