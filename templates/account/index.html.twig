{% extends 'base.html.twig' %}

{% block title %}My account{% endblock %}

{% block body %}
    <div class="container-fluid py-3 mb-3 border-bottom bg-white text-center">
        <h1>My account</h1>
    </div>
    <div class="container w-50">
        <div class="card mb-3 py-2 px-3">
            <div class="card-body">
                <div class="mb-3">
                    <h3 class="card-title">Change email address</h3>
                </div>
                {{ form_start(emailForm) }}
                {{ form_widget(emailForm) }}
                {% if errorMsg %}
                    <p class="text-danger">{{ errorMsg }}</p>
                {% endif %}
                <button class="btn btn-primary mt-2">{{ button_label|default('Change email address') }}</button>
                {{ form_end(emailForm) }}
            </div>
        </div>

        <div class="card mb-3 py-2 px-3">
            <div class="card-body">
                <div class="mb-3">
                    <h3 class="card-title">Change password</h3>
                </div>
                {{ form_start(passwordForm) }}
                {{ form_widget(passwordForm) }}
                <button class="btn btn-primary mt-2">{{ button_label|default('Change password') }}</button>
                {{ form_end(passwordForm) }}
            </div>
        </div>
    </div>
{% endblock %}
